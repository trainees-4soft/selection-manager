<%= simple_form_for @step, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :hour %>
  <%= f.input :date %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                steps_path, :class => 'btn' %>
  </div>
<% end %>