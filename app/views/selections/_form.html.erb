<%= simple_form_for(@selection, :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.input :title, label: 'Nome' %>
  <%= f.input :description, label: 'Descrição' %>
  <%= f.input :entries_end_date, label: 'Prazo final para inscrições' %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                selections_path, :class => 'btn btn-info' %>
  </div>
<% end %>
