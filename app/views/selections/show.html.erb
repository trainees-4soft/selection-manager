<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @selection.title %>
</p>

<p>
  <b>Description:</b>
  <%= @selection.description %>
</p>

<table>
<% @selection.steps.each do |step| %>
  <tr>
    <td><%= step.hour %></td>
    <td><%= step.date %></td>
    <td><%= link_to 'Show', selection_step_path(step.selection, step) %></td>
    <td><%= link_to 'Edit', edit_selection_step_path(step.selection, step) %></td>
  </tr>
<% end %>
</table>


<%= link_to 'New Step', new_selection_step_path(@selection) %> | 
<%= link_to 'Edit', edit_selection_path(@selection) %> |
<%= link_to 'Back', selections_path %>
