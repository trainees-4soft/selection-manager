<%= simple_form_for([@selection, @step], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :title %>
  <%= f.input :hour %>
  <%= f.input :date %>
  <%= f.input :description %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                selection_steps_path, :class => 'btn' %>
  </div>
<% end %>