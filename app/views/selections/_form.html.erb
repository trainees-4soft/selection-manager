<%= simple_form_for(@selection, :html => { :class => 'form-horizontal' }) do |f| %>

  		<%= f.input :title, label: 'Nome' %>

  		<%= f.input :description, label: 'Descrição', :input_html => {:style => 'width: 500px; height: 200px'} %>
  		<%= f.input :entries_end_date, label: 'Prazo final para inscrições', order: [:day,:month, :year], :input_html => {:style => 'width: auto'} %>
  		<%= f.select :enterprise_id ,Enterprise.find(current_user.enterprise_id).name => current_user.enterprise_id	%>



  		<div class="form-actions">
    	<%= f.button :submit, :class => 'btn btn-primary' %>
    	<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                selections_path, :class => 'btn btn-info' %>
  		</div>
<% end %>